{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "target": "ES2022",
    "moduleResolution": "Node10",
    "module": "ES6",
    "declaration": false,
    "isolatedModules": true,
    "outDir": "./build"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
